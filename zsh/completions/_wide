#compdef wide

_wide_get_command_list() {
    printf "\
        help\n\
        start\n\
        stop\n\
        status\n\
        up\n\
        build\n\
        restart\n\
        recreate\n\
        logs\n\
        php\n\
        composer\n\
        artisan\n\
        shell\n\
        sync\n\
        self-update\n
        copy2host\n
        copy2container\n"
}

_wide() {
  local -a commands
  commands=(`_wide_get_command_list`)

  if (( CURRENT == 2 )); then
    _describe -t commands 'commands' commands
  fi

  return 0
}

_wide
